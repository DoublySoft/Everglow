                        <AnimatedBadge client:load>Comunicación</AnimatedBadge>
                        <AnimatedBadge client:load>Excelencia</AnimatedBadge>
                        <AnimatedBadge client:load>Pasión</AnimatedBadge>
                        <AnimatedBadge client:load>Agilidad</AnimatedBadge>
                        <AnimatedBadge client:load>Compromiso</AnimatedBadge>
                        <AnimatedBadge client:load>Valentía</AnimatedBadge>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div
        class="text-center mb-10 mt-10 lg:mt-2 text-light-STRONG dark:text-dark-STRONG"
    >
        🚀 Powered By Everglow
    </div>
</div>

<style>
    @keyframes marquee {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(-100%);
        }
    }

    @keyframes marquee2 {
        0% {
            transform: translateX(-100%);
        }
        100% {
            transform: translateX(0);
        }
    }

    .animate-marquee {
        display: flex;
        min-width: 200%;
        animation: marquee 20s linear infinite;
    }

    .animate-marquee-2 {
        display: flex;
        min-width: 200%;
        animation: marquee2 20s linear infinite;
    }

    .overflow-hidden {
        overflow: hidden;
        white-space: nowrap;
    }

    .badge {
        padding: 0.5rem 1rem;
        border-radius: 10%;
        background-color: #eee9f2;
        font-size: 0.95rem;
    }

    .widget-title {
        background: linear-gradient(to left, #3b5342, #0d3a4f);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.2rem;
        background-color: white;
        font-weight: bold;
    }

    .widget-title-2 {
        background: linear-gradient(to right, #0d3a4f, #3b5342);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.2rem;
        background-color: white;
        font-weight: bold;
    }

    .widget-title-dark {
        background: linear-gradient(to right, #4c51bf, #805ad5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.2rem;
        background-color: #2d3748; /* Fondo oscuro */
        font-weight: bold;
    }

    .widget-title-dark-2 {
        background: linear-gradient(to right, #4c51bf, #805ad5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.2rem;
        background-color: #2d3748; /* Fondo oscuro */
        font-weight: bold;
    }

    .widget-subtitle {
        background: linear-gradient(to right, #6747fe, #b35cff);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.5rem;
        background-color: white;
        font-weight: bold;
    }

    .widget-subtitle-dark {
        background: linear-gradient(to right, #4c51bf, #805ad5);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        font-size: 1.5rem;
        background-color: #2d3748; /* Fondo oscuro */
        font-weight: bold;
    }

    @media (max-width: 720px) {
        .responsive-picture {
            min-height: 200px;
            min-width: 412px;
        }

        .large-responsive-picture {
            min-height: 287px;
            max-height: 287px;
        }
    }
</style>
